<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	
	<appender name="FILE" class="ch.qos.logback.core.FileAppender">
		<file> application.log </file>
		<append>true</append>
		<encoder>
			<Pattern>%d [%thread] %-5level %logger{35} - %msg %n
			</Pattern>
		</encoder>
	</appender>

	<root level="DEBUG">
		<appender-ref ref="FILE" />
	</root>
</configuration>
